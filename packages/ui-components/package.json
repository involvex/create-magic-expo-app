{
  "name": "@magic-expo/ui-components",
  "version": "1.0.0",
  "description": "Reusable UI components for Magic Expo apps",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/index.ts --outdir dist --format esm --external react --external react-native --external expo --external react-native-safe-area-context",
    "build:types": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "expo": "^56.0.0-canary-20260212-4f61309",
    "react": "19.2.3",
    "react-native": "0.84.0",
    "react-native-safe-area-context": "~4.14.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-native": "^0.84.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
