{
  "name": "@magic-expo/theming",
  "version": "1.0.0",
  "description": "Theme system with Uniwind and expo-symbols integration",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/index.ts --outdir dist --format esm --external react --external react-native --external expo --external expo-symbols --external tailwindcss --external uniwind",
    "build:types": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "bunx vitest run --root ../../ --config vitest.config.ts packages/theming/src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "tailwindcss": "~4.1.16",
    "uniwind": "~1.0.0"
  },
  "peerDependencies": {
    "expo": ">=55.0.0",
    "expo-symbols": ">=55.0.0",
    "react": ">=19.0.0",
    "react-native": ">=0.83.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
