{
  "name": "@magic-expo/cli",
  "version": "1.0.0",
  "description": "CLI tool for scaffolding professional Expo applications",
  "type": "module",
  "bin": {
    "create-magic-expo-app": "./dist/create-magic-expo-app.js"
  },
  "scripts": {
    "prebuild": "bun run typecheck",
    "build": "bun build bin/create-magic-expo-app.js --outfile dist/create-magic-expo-app.js --target node",
    "dev": "bun run --watch bin/create-magic-expo-app.js",
    "start": "bun run dist/create-magic-expo-app.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "eas-cli": "^14.3.0",
    "fs-extra": "^11.3.0",
    "prompts": "^2.4.2",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@types/validate-npm-package-name": "^4.0.2"
  }
}
