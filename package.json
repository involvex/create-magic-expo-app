{
  "name": "create-magic-expo-app",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/involvex/create-magic-expo-app"
  },
  "funding": "https://github.com/sponsors/involvex",
  "author": {
    "name": "involvex"
  },
  "type": "module",
  "types": "node",
  "bin": {
    "create-magic-expo-app": "packages/cli/bin/create-magic-expo-app.js"
  },
  "files": [
    "Readme.md",
    "LICENSE",
    "packages/cli/bin/create-magic-expo-app.js"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "bun run format && bun run lint:fix && bun run typecheck",
    "build": "bun run build:config && bun run build:theming && bun run build:navigation && bun run build:ui-components && bun run build:templates && bun run build:cli && echo 'âœ“ All packages built successfully'",
    "build:cli": "bun run -F @magic-expo/cli build",
    "build:config": "bun run -F @magic-expo/config build",
    "build:navigation": "bun run -F @magic-expo/navigation build",
    "build:templates": "bun run -F @magic-expo/templates build",
    "build:theming": "bun run -F @magic-expo/theming build",
    "build:ui-components": "bun run -F @magic-expo/ui-components build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "bun pm cache rm && rimraf node_modules",
    "format": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "eas-cli": "^14.3.0",
    "ejs": "^3.1.10",
    "fs-extra": "^11.3.0",
    "prompts": "^2.4.2",
    "tailwindcss": "~4.1.16",
    "uniwind": "~1.0.0",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^10.0.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/react-native": "^12.5.0",
    "@types/bun": "latest",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "@types/prompts": "^2.4.9",
    "@types/react": "~19.1.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "happy-dom": "^15.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-sort-imports": "^1.8.11",
    "rimraf": "^6.1.3",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/involvex"
  }
}
