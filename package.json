{
  "name": "create-magic-expo-app",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/involvex/create-magic-expo-app"
  },
  "funding": "https://github.com/sponsors/involvex",
  "author": {
    "name": "involvex"
  },
  "type": "module",
  "types": "node",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "bun run format && bun run lint:fix && bun run typecheck",
    "build": "bun run build:config && bun run build:theming && bun run build:navigation && bun run build:ui-components && bun run build:templates && bun run build:cli && echo 'âœ“ All packages built successfully'",
    "build:cli": "bun run -F @magic-expo/cli build",
    "build:config": "bun run -F @magic-expo/config build",
    "build:navigation": "bun run -F @magic-expo/navigation build",
    "build:templates": "bun run -F @magic-expo/templates build",
    "build:theming": "bun run -F @magic-expo/theming build",
    "build:ui-components": "bun run -F @magic-expo/ui-components build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "rimraf node_modules packages/*/node_modules packages/*/dist",
    "format": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@expo/metro-config": "~54.0.14",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/drawer": "^7.2.1",
    "@react-navigation/native": "^7.1.6",
    "@react-navigation/stack": "^7.2.1",
    "chalk": "^5.4.1",
    "eas-cli": "^14.3.0",
    "ejs": "^3.1.10",
    "expo": "~54.0.33",
    "expo-router": "~3.5.0",
    "expo-status-bar": "~1.12.1",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~6.0.9",
    "fs-extra": "^11.3.0",
    "prompts": "^2.4.2",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "tailwindcss": "~4.1.16",
    "uniwind": "~1.0.0",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "@types/prompts": "^2.4.9",
    "@types/react": "~19.1.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-sort-imports": "^1.8.11",
    "rimraf": "^6.1.3",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.56.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/involvex"
  }
}
